{
  "name": "@badmagic/hk-modlinks",
  "version": "1.0.0",
  "description": "Prototype of using node to manage modlinks for Hollow Knight modding",
  "type": "module",
  "exports": "./dist/src/index.js",
  "files": [
    "./bin",
    "./dist/src"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "lint": "eslint . --fix --cache",
    "format:docs": "prettier --write docs/**.md",
    "test": "echo OK",
    "build": "npm run clean && npm run lint && npm run test && tsc",
    "prepare": "husky",
    "prepack": "npm run build && oclif manifest",
    "postpack": "shx rm oclif.manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadMagic100/hk-modlinks-prototype.git"
  },
  "author": "badmagic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BadMagic100/hk-modlinks-prototype/issues"
  },
  "homepage": "https://github.com/BadMagic100/hk-modlinks-prototype#readme",
  "dependencies": {
    "@oclif/core": "^4.5.2",
    "axios": "^1.11.0",
    "cbor2": "^2.0.1",
    "debug": "^4.4.1",
    "directory-import": "^3.3.2",
    "fast-levenshtein": "^3.0.0",
    "semver-parser": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/debug": "^4.1.12",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "oclif": "^4.22.16",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "bin": {
    "modlinks": "bin/run.js"
  },
  "oclif": {
    "bin": "modlinks",
    "commands": "./dist/src/commands",
    "dirname": "modlinks",
    "topicSeparator": " "
  }
}
